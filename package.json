{
  "name": "synkt",
  "version": "0.1.0",
  "private": true,
  "description": "Calendar sync app to help friends find the best times to meet",
  "scripts": {
    "mobile": "pnpm --filter mobile start",
    "backend": "pnpm --filter backend start:dev",
    "dev": "concurrently \"pnpm mobile\" \"pnpm backend\"",
    "backend-build": "pnpm --filter backend build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm --filter mobile type-check && pnpm --filter backend type-check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}